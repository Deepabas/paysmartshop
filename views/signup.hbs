                    </form>
                </div>
            </div>
        </div>
    </section>
    




    </body>
    <script>
       function valiation() {
           var name=$('#name').val();
           var email=$('#email').val();
           var password=$('#password').val();
           if(name=='')
           {
             $('#name').css('border-color','#ff0000');  
           }
           else
           {
            $('#name').css('border-color','#f5f5f0');     
           }
            if(email=='')
           {
             $('#email').css('border-color','#ff0000');  
           }
           else
           {
            $('#email').css('border-color','#f5f5f0');     
           }
            if(password=='')
           {
             $('#password').css('border-color','#ff0000');  
           }
           else
           {
            $('#password').css('border-color','#f5f5f0');     
           }
           if(name!='' && email!='' && password!='' )
           {
               return true;
           }
           else
           {
               return false;
           }
          
           

        }
     
    </script>