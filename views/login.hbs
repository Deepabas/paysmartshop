<script>
    function validation() {
        var name = $('#name').val();
        var password = $('#password').val();
        if (name == '') {
            $('#name').css('border-color', '#ff0000');
        }
        else {
            $('#name').css('border-color', '#f5f5f0');
        }
        if (password == '') {
            $('#password').css('border-color', '#ff0000');
        }
        else {
            $('#password').css('border-color', '#f5f5f0');
        }
        if (name != '' && password != '') {
            return true;

        }
        else {
            return false;
        }
    }
</script>